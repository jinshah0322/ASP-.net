
@{
    ViewBag.Title = "ViewSubmissions";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<Q_AManagement.Models.AllTableJoin>

<h2>View Submissions</h2>


<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Title
        </th>
        <th>
            Description
        </th>
        <th>
            Creation Date
        </th>
        <th>
            Submission Date
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Users.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionPapers.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionPapers.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionPapers.CreationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Submissions.SubmissionDate)
            </td>
            <td>
                <button type="button" onclick="location.href='@Url.Action("ViewScore", new { id = item.QuestionPapers.QuestionPaperID,userID = item.Users.UserID})'" class="btn btn-success">View Score</button>
                <button type="button" onclick="location.href='@Url.Action("DeleteSubmission", new { questioPaperid = item.QuestionPapers.QuestionPaperID,userid = item.Users.UserID})'" class="btn btn-danger">Delete</button>
            </td>
        </tr>
    }

</table>
