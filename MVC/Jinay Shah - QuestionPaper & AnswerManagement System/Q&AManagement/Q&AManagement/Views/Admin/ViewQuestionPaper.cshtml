@using Q_AManagement.Helpers

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model Q_AManagement.Models.QuestionPaperWithCreator

@{
    ViewBag.Title = "ViewQuestionPaper";
}

<div class="container marginLeft">
    <h2 class="mt-4">View Question Paper</h2>
    <div class="card mt-4">
        <div class="card-body">
            <h4 class="card-title">@Html.DisplayFor(model => model.QuestionPaper.Title)</h4>
            <p class="card-text">@Html.DisplayFor(model => model.QuestionPaper.Description)</p>
            <dl class="row">
                <dt class="col-sm-3">Creation Date:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.QuestionPaper.CreationDate)</dd>
                <dt class="col-sm-3">Status:</dt>
                <dd class="col-sm-9">
                    <div class="col-sm-9">
                        @Html.DropDownListFor(model => model.QuestionPaper.Status, new SelectList(new[]
                        {
                            new SelectListItem { Text = "Draft", Value = "Draft" },
                            new SelectListItem { Text = "Pending", Value = "Pending" },
                            new SelectListItem { Text = "Approved", Value = "Approved" }
                        }, "Value", "Text"), "Select status", new { @class = "form-control", disabled = "disabled" })

                        @Html.ValidationMessageFor(model => model.QuestionPaper.Status, "", new { @class = "text-danger" })
                    </div>
                </dd>
            </dl>
            <div>
                <button type="button" onclick="location.href='@Url.Action("ViewQuestions", new { id = Model.QuestionPaper.QuestionPaperID})'" class="btn btn-success">View Questions</button>
                <button type="button" onclick="location.href='@Url.Action("EditQuestionPaper", new { id = Model.QuestionPaper.QuestionPaperID})'" class="btn btn-primary ">Edit Question Paper</button>
                <button type="button" onclick="location.href='@Url.Action("Index", "Admin")'" class="btn btn-danger ">Home</button>
            </div>
        </div>
    </div>
</div>
